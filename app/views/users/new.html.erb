<h3>Create User</h3>

<%= error_messages_for :user %>
<% form_for @user do |f| %>
<table>
    <tr>
      <td><%= f.label :name, 'Name' %></td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td><%= f.label :username, 'Username' %></td>
      <td><%= f.text_field :username %></td>
    </tr>
    <tr>
      <td><%= f.label :email, 'Email' %></td>
      <td><%= f.text_field :email %></td>
    </tr>
    <td><%= f.label :password, 'Password' %></td>
    <td><%= f.password_field :password %></td>
    <tr>
      <td><%= f.label :password_confirmation, 'Confirm Password' %></td>
      <td><%= f.password_field :password_confirmation %></td>
    </tr>
    <tr>
      <td colspan="2"><%= submit_tag 'Create User' -%></td>
    </tr>
</table>
<% end -%>
