<% content_for(:left_content) do %>
  <h4>My Groups</h4>
  <ul>
    <% @user.groups.each do |group| -%>
      <li><%= link_to group.name, group_path(group) -%></li>
    <% end -%>
  </ul>
  <%= link_to 'Create a New Group', new_group_path -%>
<% end -%>
<h3>Dashboard</h3>
<p>
  Welcome, <%= @user.name -%>!<br />
</p>

